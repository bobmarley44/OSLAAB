//develop a c program to simulate the linked file for
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int f[15],p,i,st,len,j,c,k,a;
    for(i=0;i<15;i++)
        f[i]=0;
    printf("enter how many blocks already allocated:");
    scanf("%d",&p);
    printf("enter  blocks already allocated:");
    for(i=0;i<p;i++)
    {
        scanf("%d",&a);
        f[a]=1;
    }
    while(1)
    {
        printf("Enter index starting block and length ");
        scanf("%d%d",&st,&len);
        k=len;
        if(f[st]==0)
        {
            for(j=st;j<(st+k);j++)
            {
                if(f[j]==0)
                {
                    f[j]=1;
                    printf("%d----------->%d\n",j,f[j]);
                }
                else
                {
                    printf("%d Block is already allocated \n",j);
                    k++;
                }
            }
        }
        else
        {
            printf("%d starting block is already allocated\n",st);
        }
        printf("Do you want to enter more file(Yes-1/No-0");
        scanf("%d",&c);
        if(c!=1)
        {
            break;
        }
    }
    return 0;
}
